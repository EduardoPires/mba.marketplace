<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MBA.Marketplace.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MBA.Marketplace.Web.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3 py-2 d-flex justify-content-between align-items-center">
            <a asp-action="index" asp-controller="home" class="navbar-brand d-flex align-items-center me-auto">
                <i class="bi bi-bag-check-fill me-2 fs-4"></i>
                <strong>MBA.MarketPlace</strong>
            </a>
            <form class="mx-auto w-50" style="min-width: 400px;">
                <div class="input-group dark-mode">
                    <select class="form-select select-categorias" style="max-width: 150px;">
                        <option value="" selected>Categorias</option>
                    </select>
                    <input type="search" class="form-control input-categorias" placeholder="Busque seu produto..." aria-label="Search">
                    <button class="btn btn-success btn-buscar-produtos" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
            <div class="d-flex align-items-center ms-auto">
                <vc:area-usuario />
                @* <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle fs-4 me-1"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownUser">
                        <li><a class="dropdown-item" href="#">Perfil</a></li>
                        <li><a class="dropdown-item" href="#">Sair</a></li>
                    </ul>
                </div> *@
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2025 - 
            <i class="bi bi-bag-check-fill me-2 fs-4"></i>
            <strong>MBA.MarketPlace</strong>
            - Desenvolvido por: Igor Vettorello
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
