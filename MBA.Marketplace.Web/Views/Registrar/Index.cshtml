@model MBA.Marketplace.Web.ViewModels.RegistroViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLoginRegistro.cshtml";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow">
        <div class="card-header bg-dark text-white py-2">
            <h5 class="mb-0 small">Criar conta</h5>
        </div>
        <div class="card-body">

            <form asp-action="Index" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-semibold small"></label>
                    <input asp-for="Nome" class="form-control form-control-sm" />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold small"></label>
                    <input asp-for="Email" class="form-control form-control-sm" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Senha" class="form-label fw-semibold small"></label>
                    <input asp-for="Senha" class="form-control form-control-sm" />
                    <span asp-validation-for="Senha" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmacaoSenha" class="form-label fw-semibold small"></label>
                    <input asp-for="ConfirmacaoSenha" class="form-control form-control-sm" />
                    <span asp-validation-for="ConfirmacaoSenha" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-success btn-sm">Login</button>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="index" asp-controller="login" class="text-success small">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Modal de sucesso -->
@if (ViewBag.RegistroSucesso == true)
{
    <div class="modal fade show" id="modalSucesso" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Cadastro realizado</h5>
                </div>
                <div class="modal-body">
                    Sua conta foi criada com sucesso.
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Index", "Login")" class="btn btn-success">Ir para login</a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-backdrop fade show"></div>

    <script>
        // Impede que o modal feche com tecla ESC ou clique fora
        document.body.classList.add('modal-open');
        document.body.style.paddingRight = '0px';
    </script>
}

@if (ViewBag.RegistroErro == true)
{
    <div class="modal fade show" id="modalSucesso" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Falha ao realizar o cadastro</h5>
                </div>
                <div class="modal-body">
                    Ocorreu um erro ao realizar seu cadastro. Tente novamente mais tarde!
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-danger">Ir para tela inicial</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Backdrop manual -->
    <div class="modal-backdrop fade show"></div>

    <script>
        document.body.classList.add('modal-open');
        document.body.style.paddingRight = '0px';
    </script>
}