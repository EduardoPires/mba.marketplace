@RenderSection("Styles", required: false)
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <!-- Sidebar refinado -->
        <nav class="bg-light border-end px-3 py-4" style="width: 240px; min-height: 100vh;">
            <h6 class="text-muted mb-4">Painel Admin</h6>

            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark rounded small px-2 py-2 hover-menu" href="@Url.Action("criar", "categoria")">
                        <i class="bi bi-plus-square me-2"></i> Cadastrar Categoria
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark rounded small px-2 py-2 hover-menu" href="@Url.Action("index", "categoria")">
                        <i class="bi bi-list-ul me-2"></i> Listar Categorias
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark rounded small px-2 py-2 hover-menu" href="@Url.Action("criar", "produto")">
                        <i class="bi bi-plus-square me-2"></i> Cadastrar Produto
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-dark rounded small px-2 py-2 hover-menu" href="@Url.Action("index", "produto")">
                        <i class="bi bi-list-ul me-2"></i> Listar Produtos
                    </a>
                </li>
                <li class="nav-item mt-3">
                    <a class="nav-link d-flex align-items-center text-danger rounded small px-2 py-2" href="@Url.Action("logout", "login")">
                        <i class="bi bi-box-arrow-right me-2"></i> Sair
                    </a>
                </li>
            </ul>
        </nav>


        <!-- Conteúdo principal -->
        <main class="p-4 flex-grow-1">
            <h4>@ViewData["Title"]</h4>
            <hr />
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-maskmoney@3.0.2/dist/jquery.maskMoney.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)    
</body>
</html>
